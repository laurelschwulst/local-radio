<main class="Main Main--home">
    <header class="Header">
        <h1 class="Header-title">
            <span class="Spinner">░</span><a href="/" class="Header-titleSpan">{{title}}</a>
        </h1>
    </header>
    <section class="PageContent">
        <p>Local Radio is hosted from the Pond server at Onion Street Labs. This site is hosted locally and only accessible from the “love thy pet” network.</p>
        {{#if sources}}
        <h2>Active Stations:</h2>
        <ul class="SourceList">
            {{#each sources}}
            <li class="SourceList-item">
                <a href="/station{{this.mount}}" class="SourceList-link">
                    <h3 class="SourceList-title">{{{this.title}}} ({{this.listeners}})</h3>
                </a>
                <p class="SourceList-description">{{this.description}}</p>
            </li>
            {{/each}}
        </ul>
        {{else}}
        <section style="margin-bottom: 1em;">
            <p>No active stations!</p>
        </section>
        {{/if}}
        <a class="StreamButton StreamButton--new" href="/new">New Station</a>
        {{!-- <hr>
        <h2>Bulletin</h2>
        <ul></ul>
        <input class="PostInput" type="text" name="Post"><button class="PostButton">Post</button> --}}
    </section>
</main>
